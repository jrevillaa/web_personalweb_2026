---
import BaseLayout from '../../components/layout/BaseLayout.astro';
import es from '../../i18n/es.json';

const title = `${es['contact.title']} | Jair Revilla`;
const description = es['contact.desc'];
---

<BaseLayout title={title} description={description} lang="es">
  <main class="container">
    <section class="contact-section">
      <h1 class="page-title">{es['contact.title']}</h1>
      <p class="contact-desc">{es['contact.desc']}</p>
      
      <div class="contact-links">
        <a href="mailto:hola@jairrevilla.com" class="contact-item">
          <span class="label">{es['contact.email']}</span>
          <span class="value">hola@jairrevilla.com</span>
        </a>
        <div class="social-links">
           <p class="label">{es['contact.social']}</p>
           <a href="https://linkedin.com/in/jrevilla" target="_blank" rel="noopener noreferrer">LinkedIn</a>
           <a href="https://github.com/jrevilla" target="_blank" rel="noopener noreferrer">GitHub</a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .contact-section {
    padding: var(--space-12) 0;
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .page-title {
    font-size: 2.5rem;
    margin-bottom: var(--space-4);
  }
  
  .contact-desc {
    font-size: 1.25rem;
    color: #666;
    margin-bottom: var(--space-8);
  }
  
  .contact-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    align-items: center;
  }
  
  .contact-item {
    padding: var(--space-4);
    background: #f9f9f9;
    border-radius: var(--radius-2);
    width: 100%;
    display: block;
    border: 1px solid #eee;
    transition: box-shadow 0.2s ease;
  }
  
  .contact-item:hover {
     box-shadow: var(--shadow-1);
  }
  
  .label {
    display: block;
    font-size: 0.875rem;
    color: #999;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-2);
  }
  
  .value {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1a1a1a;
  }
  
  .social-links {
    margin-top: var(--space-4);
  }
  
  .social-links a {
    margin: 0 var(--space-2);
    font-weight: 600;
    text-decoration: underline;
    text-underline-offset: 4px;
    color: #1a1a1a;
  }
</style>
