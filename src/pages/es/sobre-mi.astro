---
import BaseLayout from '../../components/layout/BaseLayout.astro';
import es from '../../i18n/es.json';

const title = `${es['about.title']} | Jair Revilla`;
const description = es['about.intro'];
---

<BaseLayout title={title} description={description} lang="es">
  <main class="container">
    <section class="about-section">
      <h1 class="page-title">{es['about.title']}</h1>
      <div class="content">
        <p class="intro">{es['about.intro']}</p>
        <p>{es['about.history']}</p>
        <!-- Aquí iría más contenido estático o desde MD -->
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .about-section {
    padding: var(--space-8) 0;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .page-title {
    font-size: 2.5rem;
    margin-bottom: var(--space-6);
    color: #1a1a1a;
  }

  .intro {
    font-size: 1.25rem;
    color: #444;
    font-weight: 500;
    margin-bottom: var(--space-4);
  }
</style>
