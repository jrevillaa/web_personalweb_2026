---
import { getCollection } from "astro:content";
import BaseLayout from "../../../components/layout/BaseLayout.astro";

export async function getStaticPaths() {
    const allPlugins = await getCollection("plugins");
    const esPlugins = allPlugins.filter((post) => post.data.lang === "es");

    return esPlugins.map((plugin) => ({
        params: { slug: plugin.slug.replace(/-es$/, "") },
        props: { plugin },
    }));
}

const { plugin } = Astro.props;
const { Content } = await plugin.render();
---

<BaseLayout
    title={`${plugin.data.name} | Plugins`}
    description={plugin.data.description}
    lang="es"
>
    <main class="container">
        <article class="plugin-detail">
            <header class="plugin-header">
                <div class="back-link-wrapper">
                    <a href="/es/plugins" class="back-link"
                        >← Volver al Directorio</a
                    >
                </div>
                <div class="plugin-meta-top">
                    <span class="type-badge">{plugin.data.type}</span>
                    <span class="ver-badge">v{plugin.data.version}</span>
                </div>
                <h1 class="plugin-title">{plugin.data.name}</h1>
                <p class="plugin-lead">{plugin.data.description}</p>

                <div class="actions">
                    {
                        plugin.data.downloadUrl && (
                            <a
                                href={plugin.data.downloadUrl}
                                class="btn btn-primary"
                            >
                                Descargar
                            </a>
                        )
                    }
                    {
                        plugin.data.repoUrl && (
                            <a
                                href={plugin.data.repoUrl}
                                class="btn btn-secondary"
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                Ver Repositorio
                            </a>
                        )
                    }
                </div>
            </header>

            <div class="content-grid">
                <div class="main-content">
                    <Content />
                </div>
                <aside class="sidebar">
                    <h3>Características</h3>
                    <ul class="features-list">
                        {
                            plugin.data.features.map((feature) => (
                                <li>{feature}</li>
                            ))
                        }
                    </ul>
                </aside>
            </div>
        </article>
    </main>
</BaseLayout>

<style>
    .plugin-detail {
        padding: var(--space-8) 0;
    }

    .plugin-header {
        text-align: center;
        max-width: 700px;
        margin: 0 auto var(--space-12);
    }

    .back-link-wrapper {
        margin-bottom: var(--space-6);
    }

    .back-link {
        color: var(--color-text);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9rem;
        opacity: 0.7;
        transition: opacity 0.2s;
    }

    .back-link:hover {
        opacity: 1;
        color: var(--color-primary);
    }

    .plugin-meta-top {
        display: flex;
        justify-content: center;
        gap: var(--space-2);
        margin-bottom: var(--space-4);
    }

    .type-badge,
    .ver-badge {
        background: #f0f0f0;
        padding: 4px 12px;
        border-radius: 100px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        color: #555;
    }

    .plugin-title {
        font-size: 3rem;
        margin-bottom: var(--space-4);
        color: #1a1a1a;
    }

    .plugin-lead {
        font-size: 1.25rem;
        color: #666;
        margin-bottom: var(--space-8);
    }

    .actions {
        display: flex;
        justify-content: center;
        gap: var(--space-4);
    }

    .content-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-8);
    }

    @media (min-width: 900px) {
        .content-grid {
            grid-template-columns: 2fr 1fr;
        }
    }

    .sidebar {
        background: #f9f9f9;
        padding: var(--space-6);
        border-radius: var(--radius-2);
        height: fit-content;
    }

    .sidebar h3 {
        font-size: 1.1rem;
        margin-bottom: var(--space-4);
        border-bottom: 2px solid #ddd;
        padding-bottom: var(--space-2);
    }

    .features-list {
        list-style: none;
        padding: 0;
    }

    .features-list li {
        margin-bottom: var(--space-2);
        padding-left: 20px;
        position: relative;
    }

    .features-list li:before {
        content: "•";
        color: var(--color-primary, #0056b3);
        position: absolute;
        left: 0;
    }

    /* Markdown Content Styles */
    .main-content {
        font-size: 1.1rem;
        line-height: 1.7;
    }

    .main-content :global(h2) {
        font-size: 1.8rem;
        margin-top: var(--space-6);
        margin-bottom: var(--space-4);
    }

    .main-content :global(h3) {
        font-size: 1.4rem;
        margin-top: var(--space-4);
        margin-bottom: var(--space-2);
    }
</style>
