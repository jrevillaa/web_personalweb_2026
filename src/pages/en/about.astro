---
import BaseLayout from '../../components/layout/BaseLayout.astro';
import en from '../../i18n/en.json';

const title = `${en['about.title']} | Jair Revilla`;
const description = en['about.intro'];
---

<BaseLayout title={title} description={description} lang="en">
  <main class="container">
    <section class="about-section">
      <h1 class="page-title">{en['about.title']}</h1>
      <div class="content">
        <p class="intro">{en['about.intro']}</p>
        <p>{en['about.history']}</p>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .about-section {
    padding: var(--space-8) 0;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .page-title {
    font-size: 2.5rem;
    margin-bottom: var(--space-6);
    color: #1a1a1a;
  }

  .intro {
    font-size: 1.25rem;
    color: #444;
    font-weight: 500;
    margin-bottom: var(--space-4);
  }
</style>
