---
import BaseLayout from '../../components/layout/BaseLayout.astro';
import ContactForm from '../../components/ui/ContactForm.astro';
import en from '../../i18n/en.json';

const title = `${en['contact.title']} | Jair Revilla`;
const description = en['contact.desc'];
---

<BaseLayout title={title} description={description} lang="en">
  <main class="container">
    <section class="contact-section">
      <h1 class="page-title">{en['contact.title']}</h1>
      <p class="contact-desc">{en['contact.desc']}</p>
      
      <div class="contact-grid">
        <div class="contact-info">
            <h2 class="subtitle">Information</h2>
            <div class="contact-links">
                <a href="mailto:jrevilla492@gmail.com" class="contact-item">
                <span class="label">{en['contact.email']}</span>
                <span class="value">jrevilla492@gmail.com</span>
                </a>
                <div class="social-links">
                <p class="label">{en['contact.social']}</p>
                <a href="https://linkedin.com/in/jrevilla" target="_blank" rel="noopener noreferrer">LinkedIn</a>
                <a href="https://github.com/jrevilla" target="_blank" rel="noopener noreferrer">GitHub</a>
                </div>
            </div>
        </div>
        
        <div class="contact-form-wrapper">
             <h2 class="subtitle">Send me a message</h2>
             <ContactForm 
                nameLabel={en['form.name']}
                emailLabel={en['form.email']}
                subjectLabel={en['form.subject']}
                messageLabel={en['form.message']}
                submitLabel={en['form.submit']}
             />
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .contact-section {
    padding: var(--space-8) 0;
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .page-title {
    font-size: 2.5rem;
    margin-bottom: var(--space-4);
    text-align: center;
  }
  
  .contact-desc {
    font-size: 1.25rem;
    color: #666;
    margin-bottom: var(--space-12);
    text-align: center;
  }

  .contact-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: var(--space-8);
  }

  @media (min-width: 768px) {
      .contact-grid {
          grid-template-columns: 1fr 1.5fr;
      }
  }
  
  .subtitle {
      font-size: 1.5rem;
      margin-bottom: var(--space-6);
      color: #333;
  }
  
  .contact-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }
  
  .contact-item {
    padding: var(--space-4);
    background: #f9f9f9;
    border-radius: var(--radius-2);
    display: block;
    border: 1px solid #eee;
    transition: box-shadow 0.2s ease;
  }
  
  .contact-item:hover {
     box-shadow: var(--shadow-1);
  }
  
  .label {
    display: block;
    font-size: 0.875rem;
    color: #999;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-2);
  }
  
  .value {
    font-size: 1.1rem;
    font-weight: 600;
    color: #1a1a1a;
    word-break: break-all;
  }
  
  .social-links {
    margin-top: var(--space-4);
  }
  
  .social-links a {
    margin-right: var(--space-4);
    font-weight: 600;
    text-decoration: underline;
    text-underline-offset: 4px;
    color: #1a1a1a;
  }
</style>
