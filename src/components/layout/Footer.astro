---
const { lang = "es" } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
    <div class="container footer-inner">
        <div class="footer-col">
            <span class="footer-logo">Jair Revilla</span>
            <p class="footer-desc">
                {
                    lang === "es"
                        ? "Ingeniero Moodle & Arquitecto de Soluciones"
                        : "Moodle Engineer & Solution Architect"
                }
            </p>
        </div>

        <div class="footer-col">
            <nav class="footer-nav">
                <a href={`/${lang}/`}>{lang === "es" ? "Inicio" : "Home"}</a>
                <a href={`/${lang}/${lang === "es" ? "sobre-mi" : "about"}`}
                    >{lang === "es" ? "Sobre m√≠" : "About"}</a
                >
                <a href={`/${lang}/xray`}>X-Ray</a>
                <a href={`/${lang}/plugins`}>Plugins</a>
                <a href={`/${lang}/${lang === "es" ? "contacto" : "contact"}`}
                    >{lang === "es" ? "Contacto" : "Contact"}</a
                >
            </nav>
        </div>

        <div class="footer-col">
            <div class="social-links">
                <a
                    href="https://github.com/jrevillaa"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="GitHub"
                >
                    <i class="fa-brands fa-github"></i>
                </a>
                <a
                    href="https://www.linkedin.com/in/jrevillaa/"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="LinkedIn"
                >
                    <i class="fa-brands fa-linkedin"></i>
                </a>
                <a
                    href="https://wa.me/51987866987"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="WhatsApp"
                >
                    <i class="fa-brands fa-whatsapp"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="container footer-bottom">
        <p>
            &copy; {currentYear} Jair Revilla. {
                lang === "es"
                    ? "Todos los derechos reservados."
                    : "All rights reserved."
            }
        </p>
    </div>
</footer>

<style>
    .site-footer {
        background-color: #f5f5f5;
        padding: var(--space-8) 0 var(--space-4);
        margin-top: auto;
        border-top: 1px solid var(--color-border);
    }

    .footer-inner {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: var(--space-8);
        margin-bottom: var(--space-8);
    }

    .footer-logo {
        font-weight: 700;
        font-size: 1.1rem;
        color: var(--color-text);
    }

    .footer-desc {
        color: var(--color-text-light);
        font-size: 0.9rem;
        margin-top: var(--space-2);
        max-width: 300px;
    }

    .footer-nav {
        display: flex;
        flex-direction: column;
        gap: var(--space-2);
    }

    .footer-nav a {
        color: var(--color-text);
        text-decoration: none;
        font-size: 0.95rem;
        transition: color 0.2s;
    }

    .footer-nav a:hover {
        color: var(--color-primary);
    }

    .social-links {
        display: flex;
        gap: var(--space-4);
    }

    .social-links a {
        color: var(--color-text-light);
        font-weight: 500;
    }

    .social-links a:hover {
        color: var(--color-primary);
    }

    .footer-bottom {
        border-top: 1px solid #ddd;
        padding-top: var(--space-4);
        text-align: center;
        font-size: 0.85rem;
        color: #888;
    }
</style>
