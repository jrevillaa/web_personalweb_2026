---
const { title, items = [] } = Astro.props;
---

<section class="testimonials-section">
  <div class="container">
    <h2 class="section-title">{title}</h2>
    
    <div class="testimonials-grid">
      {items.map((item) => (
        <blockquote class="testimonial-card">
          <p class="quote">"{item.quote}"</p>
          <footer class="author-meta">
            <cite class="author-name">{item.author}</cite>
            <span class="author-role">{item.role}</span>
            <span class="author-company">{item.company}</span>
          </footer>
        </blockquote>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    padding: var(--space-8) 0;
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
    background-color: #fafafa;
  }
  
  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: var(--space-8);
    color: #1a1a1a;
  }
  
  .testimonials-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }
  
  @media (min-width: 768px) {
    .testimonials-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .testimonial-card {
    background: #fff;
    padding: var(--space-6);
    border-radius: var(--radius-2);
    box-shadow: var(--shadow-1);
    border-left: 4px solid var(--color-primary, #0056b3);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin: 0; /* Reset default blockquote margin */
    transition: transform 0.2s ease;
  }
  
  .testimonial-card:hover {
      transform: translateY(-4px);
      box-shadow: var(--shadow-2);
  }
  
  .quote {
    font-size: 1.1rem;
    font-style: italic;
    color: #444;
    margin-bottom: var(--space-4);
    line-height: 1.6;
  }
  
  .author-meta {
    display: flex;
    flex-direction: column;
    font-size: 0.9rem;
  }
  
  .author-name {
    font-weight: 700;
    color: #1a1a1a;
    font-style: normal;
  }
  
  .author-role {
    color: #666;
  }
  
  .author-company {
    color: #888;
    font-size: 0.85rem;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
