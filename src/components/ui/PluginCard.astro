---
const { name, type, description, version, url, features = [] } = Astro.props;
---

<a href={url} class="plugin-card">
	<div class="card-header">
        <span class="plugin-type">{type}</span>
        <span class="plugin-version">v{version}</span>
    </div>
    <h3 class="plugin-name">{name}</h3>
    <p class="plugin-desc">{description}</p>
    
    <div class="features-preview">
        {features.slice(0, 2).map(feature => (
             <div class="feature-item">âœ“ {feature}</div>
        ))}
    </div>
</a>

<style>
	.plugin-card {
		display: block;
		text-decoration: none;
		color: inherit;
		background: #fff;
		border: 1px solid #eee;
		border-radius: var(--radius-2);
		padding: var(--space-6);
		transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
	}

	.plugin-card:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-2);
		border-color: #e0e0e0;
	}

    .card-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: var(--space-3);
        font-size: 0.8rem;
    }

    .plugin-type {
        text-transform: uppercase;
        font-weight: 600;
        color: #777;
        background: #f5f5f5;
        padding: 2px 6px;
        border-radius: 4px;
    }

    .plugin-version {
        color: #999;
    }

	.plugin-name {
		font-size: 1.25rem;
		margin-bottom: var(--space-2);
		color: #1a1a1a;
	}

	.plugin-desc {
		font-size: 0.95rem;
		color: #666;
		margin-bottom: var(--space-4);
		line-height: 1.5;
        min-height: 3em; 
	}
    
    .features-preview {
        border-top: 1px dashed #eee;
        padding-top: var(--space-3);
    }
    
    .feature-item {
        font-size: 0.85rem;
        color: #555;
        margin-bottom: 4px;
    }
</style>
