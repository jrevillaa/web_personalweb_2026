---
const { title, description, tags, url } = Astro.props;
---

<a href={url} class="case-card">
	<article>
		<div class="card-content">
			<h3 class="card-title">{title}</h3>
			<p class="card-desc">{description}</p>
			
			<div class="tags-row">
				{tags.map((tag) => (
					<span class="tag">{tag}</span>
				))}
			</div>
		</div>
	</article>
</a>

<style>
	.case-card {
		display: block;
		text-decoration: none;
		color: inherit;
		background: #fff;
		border: 1px solid #eee;
		border-radius: var(--radius-2);
		transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
		overflow: hidden;
	}

	.case-card:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-2);
		border-color: #e0e0e0;
	}

	.card-content {
		padding: var(--space-6);
	}

	.card-title {
		font-size: 1.5rem;
		margin-bottom: var(--space-2);
		color: #1a1a1a;
	}

	.card-desc {
		font-size: 1rem;
		color: #666;
		margin-bottom: var(--space-4);
		line-height: 1.5;
	}

	.tags-row {
		display: flex;
		flex-wrap: wrap;
		gap: var(--space-2);
	}

	.tag {
		background: #f5f5f5;
		color: #555;
		font-size: 0.75rem;
		padding: 2px 8px;
		border-radius: 4px;
		font-weight: 500;
	}
</style>
